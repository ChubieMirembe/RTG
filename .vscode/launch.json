{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: clang build active file",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=gnu++17",
                "-g",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",

                "-I${workspaceFolder}/Dependencies/STB",
                "-I/usr/local/opt/glfw/include",
                "-I/usr/local/opt/glm/include",

                "${file}",

                "-L/usr/local/opt/glfw/lib",
                "-L$VULKAN_SDK/lib",

                "-lglfw",
                "-lvulkan",

                "-framework", "Cocoa",
                "-framework", "IOKit",
                "-framework", "CoreVideo",

                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
